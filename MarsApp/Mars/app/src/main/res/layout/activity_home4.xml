<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3f4"
    android:orientation="vertical"
    tools:context=".Home4">

    <ImageView
        android:layout_marginTop="-40dp"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_nav"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#585858"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="12sp"
        android:text="Trip Theme"
        />

    <ImageView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/bukchon_theme"
        />

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#585858"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="12sp"
        android:text="Spot"
        />


    <ImageView
        android:id="@+id/spot"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/spot_bar_all"/>

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#585858"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="12sp"
        android:text="Photo"
        />

    <TextView
        android:id="@+id/f"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:background="@xml/rounded"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#707070"
        android:lineSpacingExtra="5sp"
        android:text="Bukchon Hanok Village is a traditional alley that represents the Republic of Korea beyond Seoul. There is no neighborhood like this to feel the sense of Korea and know its old self. It is a representative traditional residential area in Seoul where traditional Korean houses are concentrated."
        />

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="430dp"
        android:layout_height="130dp"
        android:background="#ffffff"
        android:layout_gravity="center">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_menu"
            tools:layout_editor_absoluteX="8dp"
            app:itemIconTint="#d97d54"
            android:paddingBottom="20dp">


        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>

</LinearLayout>